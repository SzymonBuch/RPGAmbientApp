@model IEnumerable<RPGAmbientApp.Models.Emails>

<div class="container">
    <div class="row align-items-start">
        @foreach (var emailsSet in Model)
        {

        <div class="card" style="width: 18rem;">
            <div>
                <img class="card-img-top"
                     src="~/MediaLibrary/Images/student.jpg"
                     alt="Happy Student">
                <div class="card-body">
                    <h5 class="card-title">@emailsSet.Id</h5>
                    <p class="card-text">
                        @emailsSet.Email1
                        <br />
                        @emailsSet.Email2
                        <br />
                        @emailsSet.Email3
                    </p>
                </div>
            </div>
            <div>
                <a class="btn btn-warning" asp-route-Id="@emailsSet.Id" asp-action="Edit"><i class="far fa-edit"></i></a>
            </div>
            <div style="float:left" class="ml-4">
                <a class="btn btn-danger" asp-route-Id="@emailsSet.Id" asp-action="Delete"><i class="fas fa-bomb"></i></a>
            </div>
        </div>

        }
    </div>
</div>
<a class="btn btn-success" asp-action="Create">Proceed</a>

