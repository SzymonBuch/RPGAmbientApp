@model RPGAmbientApp.Models.AudioFile

<div>
    <form method="post" asp-action="Create" asp-controller="Audio" enctype="multipart/form-data">
        <div class="form-group">
            <label for="name">Song name</label>
            <input type="text" class="form-control" id="name" asp-for="Name" required>
        </div>
        <div>
            <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio1" value=5 asp-for="FileLength">
            <label class="form-check-label" for="inlineRadio1">&lt;5</label>
        </div>
        <div>
            <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio2" value=30 asp-for="FileLength">
            <label class="form-check-label" for="inlineRadio2">5-30</label>
        </div>
        <div>
            <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio3" value=60 asp-for="FileLength">
            <label class="form-check-label" for="inlineRadio3">&gt;30</label>
        </div>
        <div class="form-group">
            <label for="imageUpload">Image</label>
            <input type="file" name="files" id="imageUpload" multiple class="form-control" required />
        </div>
        <div class="form-group">
            <label for="audioFileUpload">Audio</label>
            <input type="file" name="files" id="audioFileUpload" multiple class="form-control" required />
        </div>
        <div class="container mt-4 mb-4">
            <div class="col-md-12 col-lg-8">
                <h1 class="h2 mb-4">Adventure Idea</h1>
                <div class="form-group">
                    <textarea id="editor" asp-for="AdventureIdea"></textarea>
                </div>
            </div>
        </div>
        <input class="btn btn-success" type="submit" value="Add" />
    </form>
</div>